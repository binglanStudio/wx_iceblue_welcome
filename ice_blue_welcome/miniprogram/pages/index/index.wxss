/* flex布局 元素水平垂直居中 */
.column-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.row-center {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-between;
}
