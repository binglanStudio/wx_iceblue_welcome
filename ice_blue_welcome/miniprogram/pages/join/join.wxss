  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.main .bottom .group .group-type .group-item {
  box-sizing: border-box;
  width: 150rpx;
  height: 150rpx;
  border: 2rpx solid #2db7f7;
  line-height: 150rpx;
  text-align: center;
  border-radius: 50%;
  overflow: hidden;
}
.main .bottom .group .group-type .group-item .group-item-title {
  font-size: 32rpx;
  color: #2db7f7;
}
.main .bottom .group .group-type .active {
  background-color: #2db7f7;
}
.main .bottom .group .group-type .active .group-item-title {
  font-size: 38rpx;
  color: white;
}
.main .bottom .text-area {
  margin-top: 39rpx;
  border: 2rpx solid #c5c8ce;
  border-radius: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
  padding: 25rpx 20rpx 0 20rpx;
  height: 200rpx;
}
.main .bottom .text-area textarea {
  width: 100%;
  height: 100%;
}
.main .bottom .submit-continer {
  margin-top: 32rpx;
  display: flex;
  justify-content: center;
}
.main .bottom .submit-continer .submit {
  width: 281rpx;
  background-color: #2db7f7;
  color: white;
  height: 77rpx;
  line-height: 77rpx;
  text-align: center;
  border-radius: 5rpx;
}

.one-border{
  width: 50%;
